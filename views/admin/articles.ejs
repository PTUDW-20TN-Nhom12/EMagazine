<%- include('header.ejs') %>
    <main style="margin-top: calc(0.5625rem + 67.6px)">
        <div class="container pt-4">
            <section class="mb-4">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title mt-2 mb-4">Articles</h3>
                        <ul class="navbar-nav d-flex flex-row justify-content-between">
                            <h5 id="article-total">Total: 0</h5>
                            <!-- <button class="btn btn-primary" onclick="location.href='/admin/add-article'">
                                Add new article
                            </button> -->
                        </ul>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table align-middle mb-0 bg-white  text-center">
                                <thead class="bg-light">
                                    <tr>
                                        <th>ID</th>
                                        <th>Title</th>
                                        <th>Author</th>
                                        <th>Status</th>
                                        <th>Uploaded Date</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody id="article-container">
                                   
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="card-footer">
                        <nav class="d-flex justify-content-center align-items-center">
                            <ul class="pagination">
                                <li class="page-item">
                                    <a class="page-link" href="/admin/articles/<%= Math.max(page - 1,1) %>" aria-label="Previous">
                                        <span aria-hidden="true">&laquo;</span>
                                    </a>
                                </li>
                                <p class="mb-0 pt-1"> <small>Page <%= page %> of </small><small id="numpage"></small></p>
                                <li class="page-item">
                                    <a id="next-link" class="page-link" href="#" aria-label="Next">
                                        <span aria-hidden="true">&raquo;</span>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </section>
            <section>
                <div class="modal fade" id="status-modal" tabindex="-1" aria-labelledby="status-modal"
                    aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">Change article status</h5>
                                <button type="button" class="btn-close" data-mdb-dismiss="modal"
                                    aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <form>
                                    <div>
                                        <span class="me-3">Status: </span>
                                        <div class="btn-group mb-3">
                                            <button type="button" class="btn btn-warning"><text
                                                    id="user_type">Approved</text></button>
                                            <button type="button"
                                                class="btn btn-warning dropdown-toggle dropdown-toggle-split"
                                                data-mdb-toggle="dropdown" aria-expanded="false">
                                                <span class="visually-hidden">Toggle Dropdown</span>
                                            </button>
                                            <ul class="dropdown-menu dropdown-menu-end">
                                                <li><a id="type_1" class="dropdown-item"
                                                        onclick="$('#user_type').text($('#type_1').text());">
                                                        Refuse</a></li>
                                                <li><a id="type_2" class="dropdown-item"
                                                        onclick="$('#user_type').text($('#type_2').text());">
                                                        Approved</a></li>
                                            </ul>
                                        </div>
                                    </div>
                                    <div class="mt-3">
                                        <label for="message" class="col-form-label">Message</label>
                                        <input type="text" class="form-control" id="message" />
                                    </div>
                                </form>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-success" onclick="save()">Done</button>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </main>
    <script>
        $(document).ready(function () {
            loadCount();
            loadArticles();
        });

        function loadCount() {
            $.ajax({
                url: '/api/article/count',
                method: 'GET',
                success: function (data) {
                    $('#article-total').text('Total: ' + data.count);
                    $('#numpage').text(data.numpage);
                    $('#next-link').attr('href', '/admin/articles/' + Math.min(<%= page %> + 1, data.numpage));
                }
            });
        }

        function loadArticles() {
            $.ajax({
                url: '/api/article/<%= page %>',
                method: 'GET',
                success: function (data) {
                    $('#article-container').empty();
                    data.forEach(function (item) {
                        $('#article-container').append(`
                                    <tr>
                                        <td>
                                            <p class="fw-normal mb-1">${item.id}</p>
                                        </td>
                                        <td>
                                            <p class="fw-normal mb-1">${item.title}</p>
                                        </td>
                                        <td>
                                            <p class="text-muted mb-0">hihi@gmail.com</p>
                                        </td>
                                        <td>
                                            <div class="d-flex justify-content-center align-items-center">
                                                <i class="bi bi-circle-fill circle-reject me-1"></i>
                                                <p class="mb-0">Reject</p>
                                            </div>
                                        </td>
                                        <td>
                                            <p class="text-muted mb-0">2023-02-05 08:28:36</p>
                                        </td>
                                        <td>
                                            <button type="button" class="btn btn-link btn-sm btn-rounded"
                                                onclick="location.href='/admin/article/${item.id}'">
                                                Preview
                                            </button>
                                            <button type="button" class="btn btn-link btn-sm btn-rounded"
                                                data-mdb-toggle="modal" data-mdb-target="#status-modal">
                                                Change status
                                            </button>
                                        </td>
                                    </tr>
                        `);
                    });
                }
            });
        }
    </script>
    <%- include('footer.ejs') %>