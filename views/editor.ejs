<%- include("./editor_resource/editor_head.ejs") %>

<div class="mt-3 row" id="main-list">
  <div class="loading-container">
    <div class="loader"></div>
  </div>
</div>


  <!-- Modal -->
  <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">

            <div class="container">
                <section>
                    <div class="row">
                        <div class="col mb-4">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="text-muted font-weight-bold">Title</h5>
                                    <input type="text" class="form-control mb-3" id="title" readonly>
    
                                    <h5 class="text-muted font-weight-bold">Short description</h5>
                                    <input type="text" class="form-control mb-3" id="short-description" readonly>
    
                                    <h5 class="text-muted font-weight-bold">Content</h5>
                                    <div id="toolbar"></div>
                                    <div id="editor" style="min-height: 300px;"></div>
                                </div>
                            </div>
                        </div>
                </section>
                <div class="form-check mb-4" style="margin-left: 5px;">
                    <input class="form-check-input" type="checkbox" value="" id="is-premium" checked onclick="return false;">
                    <h5 class="text-warning">Is PREMIUM</h5>
                </div>
                <div class="form-group mb-4">
                    <label class="text-muted font-weight-bold" for="sel">Decision</label>
                    <select class="form-control" id="sel" required>
                      <option value="">None</option>
                      <option value="accept">Accept</option>
                      <option value="decline">Decline</option>
                    </select>
                </div>
                <div id="accept">
                    <h5 class="text-muted font-weight-bold">Date to publish</h5>
                    <input type="date" class="form-control mb-3" id="date">
                </div>
                <div id="decline">
                    <h5 class="text-muted font-weight-bold">Reason</h5>
                    <input type="text" class="form-control mb-3" id="reason">
                </div>
                <div class="btn-group">
                    <button type="button" class="btn btn-warning">
                        <text id="category" style="text-transform: none;">
                            Category
                        </text>
                    </button>
                </div>
                <br/>
                <div id="tags" class="btn-group mt-2">
                    
                </div>
            </div>
          
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal" id="close-modal">Close</button>
          <button type="button" class="btn btn-primary" id="save">Save changes</button>
        </div>
      </div>
    </div>
  </div>

<%- include("./editor_resource/editor_foot.ejs") %>