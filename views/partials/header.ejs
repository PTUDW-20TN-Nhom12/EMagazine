<header class="mb-4">
    <div id="Container_header">
        <div id="LogoAds">
            <img src="/asset/Logo.png" id="Logo" alt="LOGO" onclick="window.location.href='index.html'"/>
            <img src="/asset/Advertisement.png" id="Ads" alt="Advertisement" onclick="window.location.href='https://google.com'"/>
        </div>
        <div id="NavSearch">
            <ul id="Nav">
                <% /* %>
                <% for( let i = 0; i < data.length; i++ ) { %>
                    <a href="#" class="NavItem <%= (selected ===i?"NavSelected":"") %>">
