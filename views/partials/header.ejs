<header class="mb-4">
    <div id="Container_header">
        <div id="LogoAds">
            <img src="/asset/image/Logo.png" id="Logo" alt="LOGO" onclick="window.location.href='/test'"/>
            <div id="bootstrap-isolate" style="flex-grow: 1;">
                <div class="d-flex justify-content-around">

                
            <% if(header["isPremium"]){ %>
                <div class="d-flex ml-5 align-items-center">
                    <i class="bi bi-award mr-2" style="font-size: 24px; color: #B8B23C;"></i>
                    <h4 class="mb-0" style="color: #E64B4B; font-weight: bold;">PREMIUM</h4>
                </div>
            <% } %>
            <div class="d-flex align-items-center ml-auto mr-5">
                <div class="form-outline">
                    <input type="search" id="SearchText" class="form-control" placeholder="Tìm kiếm" />
                </div>
                <button id="SearchButton" type="button" class="btn btn-dark">
                  <i class="fas fa-search"></i>
                </button>
            </div>
            <a class="d-flex align-items-center mr-5" href="/test" style="color: grey;">
                <p class="mb-0 mr-2">Đăng nhập</p>
                <i class="bi bi-person ms-3" style="font-size: 24px;"></i>
            </a>
        </div>
            </div>
        </div>
        <div id="NavSearch">
            <ul id="Nav">
                <li class="NavItem 
                    <%= (header["selectedCat"] === -1 ? "NavSelected" : "") %>">
                    <a href="/test">
                        Trang chủ
                    </a>
                </li>

                <% for( let i = 0; i < header["catList"].length; i++ ) { %>
                    <li class="NavItem 
                        <%= (header["selectedCat"] === i?"NavSelected":"") %>
                        <%= (header["catList"][i]["subCategory"].length > 0 ? "has-submenu": "") %>">
                        <a href="/test/category/<%= header["catList"][i]["categoryId"] %>/0">
                            <%= header["catList"][i]["categoryName"] %>  
                        </a>
                        <% if (header["catList"][i]["subCategory"].length > 0) { %>
                            <ul class="submenu">
                                <% for( let j = 0; j < header["catList"][i]["subCategory"].length ; j++ ) { %>
                                    <li class="subitem">
                                        <a href="/test/category/<%= header["catList"][i]["subCategory"][j]["categoryId"] %>/0">
                                            <%= header["catList"][i]["subCategory"][j]["categoryName"] %>
                                        </a>
                                    </li>
                                <% } %>
                            </ul>
                        <% } %>
                    </li>
                <% } %>
                <li class="NavItem has-submenu">
                    <a href="#">Khac</a>
                    <ul class="submenu">
                        <% for( let i = 0; i < header["optionalList"].length; i++ ) { %>
                            <li class="subitem">
                                <a href="/test/<%= header["optionalList"][i]["url"] %>">
                                    <%= header["optionalList"][i]["name"] %>
                                </a>
                            </li>
                        <% } %>
                    </ul>
                </li>
            </ul>
            <div id="SearchBar">
                <div id="LineSearch">
                    <!-- <img src="/asset/image/VerticalLine.png" id="VerticalLine"/>
                    <input id="SearchText" placeholder="Nhap tu khoa tim kiem"/> -->
                </div>
                <!-- <img src="/asset/image/SearchIcon.png" id="SearchIcon"/> -->
            </div>
        </div>
    </div>
</header>
<script>
    document.querySelector("#SearchButton").addEventListener('click', (e) => {
        window.location.href = '/test/search/' + document.querySelector("#SearchText").value + "/0";
    })
</script>