<h3 class="font-weight-normal"><%= post_data.post_title %></h3>
<div class="d-flex mt-3">
  <span class="mr-auto"><%= moment(post_data.date).format('DD/MM/YYYY') %></span>
</div>
<div class="d-flex mt-3 mb-3">
  <% for (let tag of post_data.tags) { %>
    <span class="post-tag" onclick="window.location.href='/tag/<%= tag.id %>/0'">#<%= tag.name %></span>
  <% } %>
</div>
<hr>

<div class="d-flex flex-column justify-content-center" style="text-align: justify;">
  <%- post_data.content %>
</div>
