            <script>
                const path = window.location.pathname;
                const currentPage = path.substring(path.lastIndexOf("/") + 1, path.lastIndexOf("."));
                if (currentPage && $(`#${currentPage}`).length > 0) {
                    $(`#${currentPage}`).addClass('active');
                } else {
                    $('#dashboard').addClass('active');
                }
